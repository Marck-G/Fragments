<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/film_title"
        android:textSize="22dp"
        android:text="Titulo de la pelÃ­cula"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/film_cover"
            android:src="@mipmap/ic_infinity"
            android:cropToPadding="true"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/film_cast"
            android:layout_weight="3"
            android:text="Actor 1, Actor 2,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/film_lang"
           android:text="Ingles"
           android:layout_weight="2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/film_date"
           android:text="20/10/2018"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </LinearLayout>

    <TextView
        android:id="@+id/film_sumary"
        android:textSize="15dp"
        android:text="resumen de la pelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>